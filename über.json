{
	"flags": {
		"common": {
			"CXXFLAGS": "-std=c++17 -pedantic -Wall -Wconversion -Werror -Wextra -fPIC -fvisibility=hidden",
			"CPPFLAGS": "-I$(CURDIR)/inc"
		},
		"debug": {
			"CXXFLAGS": "-O0 -g3"
		},
		"release": {
			"CXXFLAGS": "-O3"
		}
	},
	"targets": {
		"peggy/peggy.a": {
			"static": true,
			"flags": {
			},
			"objects": [
				"$(eval ARFLAGS:=src)",
				"peggy/%"
			]
		},
		"test/test_vmbuffer_base": {
			"objects": [
				"test/main.o",
				"peggy/detail/vmbuffer_base%.o"
			]
		}
	},
	"dependencies": {
		"catch2": {
			"build": [
				"cmake -G'Unix Makefiles' -DBUILD_TESTING=OFF -DCATCH_INSTALL_DOCS=OFF -DCATCH_INSTALL_HELPERS=OFF -DCMAKE_INSTALL_PREFIX=. .",
				"make install"
			]
		}
	}
}
